<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

    <%= form_with model: @user do |f| %>

  <div class="form-group message_box">
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, style:"width:100%", autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div class="form-group">
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class="form-group message_box">
    <lavel for="inputIntroduction">Introduction</lavel><br>
    <%= f.text_area :introduction, style:"width:100%", id:"inputIntroduction" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
  </div>