<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <table class="table table-hover table-inverse">
        <tbody>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

            <tr>
              <td><%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(80,80) %>
                <% end %></td><br>
              <td><%=  link_to book.title, book_path(book.id) %></td>
  			      <td><%= book.body %></td>
            </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
