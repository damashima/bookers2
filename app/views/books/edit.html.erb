<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <%= render 'error', book: @book %>

      <%= form_with model: @book do |f| %>

    <div class="form-group message_box">
      <label for="book_title">Title</label><br>
        <%= f.text_field :title, style:"width:100%" %>
    </div>
    <div class="form-group message_box">
      <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body, style:"width:100%" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Update Book', class: "btn btn-success" %>
    <% end %>
    </div>

    <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>

   </div>
  </div>
</div>